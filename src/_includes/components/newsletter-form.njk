<form class="form newsletter-form" action="#" method="post">
  <fieldset>
    <legend class="font-size-2">
      Subscribe
    </legend>
    <div class="newsletter__contents">
      <p class="newsletter__info font-size-2">
        Get our newsletter in your inbox for updates about our progress and events.
      </p>
      <div class="field">
        <label for="newsletter-email" class="visually-hidden">Email address</label>
        <div class="connected-field">
          <input class="input" id="newsletter-email" type="email" name="email" 
            placeholder="name@example.com" required />
          <button type="submit" class="btn">Subscribe</button>
        </div>
      </div>
    </div>
  </fieldset>
</form>